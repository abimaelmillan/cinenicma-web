<style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');

    /* Animaciones de entrada inspiradas en A24 */
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(60px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes fadeInLeft {
        from {
            opacity: 0;
            transform: translateX(-40px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    @keyframes fadeInRight {
        from {
            opacity: 0;
            transform: translateX(40px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    @keyframes slideInFromBottom {
        from {
            opacity: 0;
            transform: translateY(80px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes staggerIn {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Menu placeholder */
    .menu-placeholder {
        height: 140px; 
        background-color: black;
        animation: fadeIn 0.8s ease-out;
    }

    /* Main contact section */
    .contact-section {
        background-color: #ffffff;
        color: #000;
        min-height: calc(100vh - 120px);
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        overflow-x: hidden;
    }

    /* Hero section con animación */
    .contact-hero {
        padding: 120px 40px 80px;
        text-align: center;
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);
        animation: slideInFromBottom 1.2s ease-out 0.2s both;
    }

    .contact-title {
        /* font-size: clamp(3rem, 8vw, 6rem); */
        font-size: clamp(3rem, 7vw, 4rem);
        font-weight: 300;
        line-height: 0.9;
        margin: 0 0 40px 0;
        letter-spacing: -0.02em;
        color: #000;
    }

    .contact-title .highlight {
        font-style: italic;
        color: #000;
        position: relative;
    }

    .contact-title .highlight::after {
        content: '';
        position: absolute;
        bottom: 10px;
        left: 0;
        width: 100%;
        height: 2px;
        background: linear-gradient(90deg, transparent, #000, transparent);
        animation: underlineGlow 3s ease-in-out infinite;
    }

    @keyframes underlineGlow {
        0%, 100% { opacity: 0.3; transform: scaleX(0.8); }
        50% { opacity: 1; transform: scaleX(1); }
    }

    .contact-subtitle {
        font-size: 1.25rem;
        font-weight: 400;
        color: rgba(0, 0, 0, 0.7);
        max-width: 600px;
        margin: 0 auto;
        line-height: 1.6;
    }

    /* Content section con animaciones escalonadas */
    .contact-content {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 80px;
        padding: 80px 40px;
        max-width: 1400px;
        margin: 0 auto;
    }

    /* Form container con animación desde la izquierda */
    .contact-form-container {
        padding-right: 40px;
        animation: fadeInLeft 1s ease-out 0.6s both;
    }

    .form-title {
        font-size: 2rem;
        font-weight: 500;
        margin-bottom: 40px;
        color: #000;
        letter-spacing: -0.01em;
    }

    /* Form styling con animaciones escalonadas */
    .contact-form {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }

    .form-group {
        position: relative;
        animation: staggerIn 0.8s ease-out both;
    }

    /* Animaciones escalonadas para cada form-group */
    .form-group:nth-child(1) { animation-delay: 0.8s; }
    .form-group:nth-child(2) { animation-delay: 0.9s; }
    .form-group:nth-child(3) { animation-delay: 1.0s; }
    .form-group:nth-child(4) { animation-delay: 1.1s; }

    .contact-form label {
        display: block;
        font-size: 0.875rem;
        font-weight: 500;
        margin-bottom: 12px;
        color: rgba(0, 0, 0, 0.8);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .contact-form input,
    .contact-form select,
    .contact-form textarea {
        width: 100%;
        background-color: transparent;
        border: none;
        border-bottom: 1px solid rgba(0, 0, 0, 0.2);
        color: #000;
        padding: 16px 0;
        font-size: 1.125rem;
        font-family: inherit;
        transition: all 0.3s ease;
        box-sizing: border-box;
    }

    .contact-form input::placeholder,
    .contact-form textarea::placeholder {
        color: rgba(0, 0, 0, 0.4);
        font-style: italic;
    }

    .contact-form input:focus,
    .contact-form select:focus,
    .contact-form textarea:focus {
        outline: none;
        border-bottom-color: #000;
        background-color: rgba(0, 0, 0, 0.02);
        transform: translateY(-2px);
    }

    .contact-form select {
        appearance: none;
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%23000000' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M6 8l4 4 4-4'/%3e%3c/svg%3e");
        background-position: right 0 center;
        background-repeat: no-repeat;
        background-size: 1.5rem;
        padding-right: 2rem;
        cursor: pointer;
    }

    .contact-form textarea {
        min-height: 120px;
        resize: vertical;
        border-bottom: 1px solid rgba(0, 0, 0, 0.2);
    }

    /* Submit button con animación */
    .submit-btn {
        background: transparent;
        border: 1px solid rgba(0, 0, 0, 0.3);
        color: #000;
        padding: 20px 32px;
        font-size: 1rem;
        font-weight: 500;
        cursor: pointer;
        position: relative;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: space-between;
        transition: all 0.3s ease;
        margin-top: 20px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        animation: fadeInUp 0.8s ease-out 1.2s both;
    }

    .submit-btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(0, 0, 0, 0.1), transparent);
        transition: left 0.5s ease;
    }

    .submit-btn:hover::before {
        left: 100%;
    }

    .submit-btn:hover {
        border-color: #000;
        background-color: rgba(0, 0, 0, 0.05);
        transform: translateY(-2px);
    }

    .btn-arrow {
        font-size: 1.2rem;
        transition: transform 0.3s ease;
    }

    .submit-btn:hover .btn-arrow {
        transform: translateX(4px);
    }

    .submit-btn:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    /* Contact info con animación desde la derecha */
    .contact-info-container {
        padding-left: 40px;
        border-left: 1px solid rgba(0, 0, 0, 0.1);
        animation: fadeInRight 1s ease-out 0.6s both;
    }

    .contact-info {
        display: flex;
        flex-direction: column;
        gap: 60px;
    }

    .info-section {
        animation: staggerIn 0.8s ease-out both;
    }

    /* Animaciones escalonadas para info-sections */
    .info-section:nth-child(1) { animation-delay: 1.0s; }
    .info-section:nth-child(2) { animation-delay: 1.1s; }
    .info-section:nth-child(3) { animation-delay: 1.2s; }

    .info-section h3 {
        font-size: 1.5rem;
        font-weight: 500;
        margin-bottom: 24px;
        color: #000;
        letter-spacing: -0.01em;
    }

    .info-section p {
        font-size: 1rem;
        line-height: 1.6;
        color: rgba(0, 0, 0, 0.7);
        margin-bottom: 32px;
    }

    /* Contact links con hover mejorado */
    .contact-details {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .contact-link {
        display: flex;
        flex-direction: column;
        gap: 4px;
        text-decoration: none;
        padding: 16px 0;
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

    .contact-link:hover {
        border-bottom-color: rgba(0, 0, 0, 0.3);
        transform: translateX(8px);
    }

    .link-label {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: rgba(0, 0, 0, 0.6);
        font-weight: 500;
    }

    .link-value {
        font-size: 1.125rem;
        color: #000;
        font-weight: 400;
    }

    /* Address */
    .address p {
        margin: 0;
        line-height: 1.8;
    }

    /* Social links con animaciones mejoradas */
    .contact-socials {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }

    .social-link {
        display: flex;
        align-items: center;
        justify-content: space-between;
        text-decoration: none;
        color: rgba(0, 0, 0, 0.8);
        padding: 12px 0;
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        font-weight: 400;
    }

    .social-link:hover {
        color: #000;
        border-bottom-color: rgba(0, 0, 0, 0.3);
        transform: translateX(8px);
    }

    .social-arrow {
        transition: transform 0.3s ease;
        font-size: 1.2rem;
    }

    .social-link:hover .social-arrow {
        transform: translate(2px, -2px);
    }

    /* Form status */
    #form-status {
        margin-top: 24px;
        padding: 20px;
        font-size: 1rem;
        text-align: center;
        border-radius: 4px;
        display: none;
        border: 1px solid rgba(0, 0, 0, 0.2);
        animation: fadeIn 0.5s ease-out;
    }

    #form-status.success {
        background-color: rgba(16, 185, 129, 0.1);
        color: #059669;
        border-color: rgba(16, 185, 129, 0.3);
        display: block;
    }

    #form-status.error {
        background-color: rgba(239, 68, 68, 0.1);
        color: #dc2626;
        border-color: rgba(239, 68, 68, 0.3);
        display: block;
    }

    /* Responsive design */
    @media (max-width: 1024px) {
        .contact-content {
            grid-template-columns: 1fr;
            gap: 60px;
        }

        .contact-form-container,
        .contact-info-container {
            padding: 0;
            animation: fadeInUp 1s ease-out 0.6s both;
        }

        .contact-info-container {
            border-left: none;
            border-top: 1px solid rgba(0, 0, 0, 0.1);
            padding-top: 60px;
        }
    }

    @media (max-width: 768px) {
        .contact-hero {
            padding: 80px 20px 60px;
        }

        .contact-content {
            padding: 60px 20px;
            gap: 40px;
        }

        .contact-title {
            font-size: clamp(2.5rem, 12vw, 4rem);
        }

        .contact-subtitle {
            font-size: 1.125rem;
        }

        .form-title {
            font-size: 1.75rem;
        }

        .info-section h3 {
            font-size: 1.25rem;
        }

        .submit-btn {
            padding: 18px 24px;
        }
    }

    @media (max-width: 480px) {
        .contact-hero {
            padding: 60px 15px 40px;
        }

        .contact-content {
            padding: 40px 15px;
        }

        .contact-form {
            gap: 24px;
        }

        .contact-info {
            gap: 40px;
        }
    }

    /* Mejora de performance para animaciones */
    * {
        will-change: auto;
    }
    
    .contact-hero,
    .contact-form-container,
    .contact-info-container,
    .form-group,
    .info-section,
    .submit-btn {
        will-change: transform, opacity;
    }

    /* Reducir animaciones en dispositivos con preferencia por movimiento reducido */
    @media (prefers-reduced-motion: reduce) {
        * {
            animation-duration: 0.01ms !important;
            animation-iteration-count: 1 !important;
            transition-duration: 0.01ms !important;
        }
    }
</style>

<script>
    // El script permanece sin cambios para mantener la funcionalidad
    interface FormspreeError {
      message: string;
    }

    interface FormspreeErrorResponse {
      errors: FormspreeError[];
    }

    const form = document.getElementById("contact-form") as HTMLFormElement | null;
    const status = document.getElementById("form-status") as HTMLElement | null;

    if (form && status) {
      const submitButton = form.querySelector("button") as HTMLButtonElement | null;

      if (submitButton) {
        const handleSubmit = async (event: SubmitEvent): Promise<void> => {
          event.preventDefault(); 

          const formData = new FormData(event.target as HTMLFormElement);

          submitButton.disabled = true;
          status.style.display = 'none';
          status.className = ''; 

          try {
            const response = await fetch(form.action, {
              method: form.method,
              body: formData,
              headers: {
                'Accept': 'application/json'
              }
            });

            if (response.ok) {
              status.innerHTML = "¡Gracias! Tu mensaje ha sido enviado.";
              status.className = 'success';
              form.reset(); 
            } else {
              const data: FormspreeErrorResponse = await response.json();
              if (data && data.errors) {
                status.innerHTML = data.errors.map(error => error.message).join(", ");
              } else {
                status.innerHTML = "Ups! Hubo un problema al enviar tu mensaje.";
              }
              status.className = 'error';
            }
          } catch (error) {
            console.error("Error al enviar el formulario:", error);
            status.innerHTML = "Ups! Hubo un problema de conexión al enviar tu mensaje.";
            status.className = 'error';
          } finally {
            submitButton.disabled = false;
            status.style.display = 'block';
          }
        };

        form.addEventListener("submit", handleSubmit);

      } else {
          console.error("Error: No se encontró el botón de envío dentro del formulario.");
      }
    } else {
      console.error("Error: No se encontró el formulario (#contact-form) o el elemento de estado (#form-status).");
    }
</script>