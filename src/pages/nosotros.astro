/* ESTILOS PARA LAS IMÁGENES DEL PROCESO */

/* Configuración de la imagen dentro del placeholder */
.image-placeholder img {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Mantiene proporción sin distorsionar */
    object-position: center; /* Centra la imagen */
    display: block;
    border-radius: 2px;
    transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

/* Efecto hover en las imágenes */
.process-image:hover img {
    transform: scale(1.05); /* Zoom sutil al hacer hover */
    filter: brightness(0.9); /* Oscurece ligeramente para mejor contraste con el overlay */
}

/* Actualización del placeholder para mejor compatibilidad con imágenes */
.image-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #f5f5f5 0%, #e8e8e8 100%);
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden; /* Importante para el efecto de zoom */
}

/* Ocultar el ícono de cámara cuando hay imagen */
.image-placeholder:has(img)::before {
    display: none;
}

/* Fallback para navegadores que no soportan :has() */
.image-placeholder img ~ .image-placeholder::before {
    display: none;
}

/* Mejora en el overlay para mejor legibilidad */
.image-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.8) 0%, rgba(0, 0, 0, 0.4) 60%, transparent 100%);
    padding: 2rem 1.5rem 1.5rem;
    transform: translateY(100%);
    transition: transform 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    z-index: 2; /* Asegura que esté por encima de la imagen */
}

/* Estados de carga para mejor UX */
.image-placeholder img {
    opacity: 0;
    animation: fadeIn 0.6s ease forwards;
}

.image-placeholder img[loading="lazy"] {
    transition: opacity 0.3s ease;
}

@keyframes fadeIn {
    to {
        opacity: 1;
    }
}

/* Responsividad mejorada para imágenes */
@media (max-width: 768px) {
    .process-image:hover img {
        transform: none; /* Desactiva zoom en móviles */
        filter: none;
    }
    
    .image-overlay {
        background: linear-gradient(to top, rgba(0, 0, 0, 0.9) 0%, transparent 100%);
        transform: translateY(0); /* Siempre visible en móviles */
        padding: 1.5rem 1rem 1rem;
    }
}

/* Mejora de accesibilidad */
@media (prefers-reduced-motion: reduce) {
    .process-image:hover img {
        transform: none;
    }
    
    .image-placeholder img {
        animation: none;
        opacity: 1;
    }
}


