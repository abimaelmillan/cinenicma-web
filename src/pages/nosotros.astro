        }
    }

    /* Animaciones sutiles */
    @media (prefers-reduced-motion: no-preference) {
        .intro-column,
        .enfoque-item,
        .process-image {
            opacity: 0;
            transform: translateY(30px);
            animation: fadeInUp 0.8s ease forwards;
        }

        .intro-column:nth-child(2) {
            animation-delay: 0.2s;
        }

        .process-image:nth-child(1) { animation-delay: 0.1s; }
        .process-image:nth-child(2) { animation-delay: 0.2s; }
        .process-image:nth-child(3) { animation-delay: 0.3s; }
        .process-image:nth-child(4) { animation-delay: 0.4s; }

        .enfoque-item:nth-child(1) { animation-delay: 0.1s; }
        .enfoque-item:nth-child(2) { animation-delay: 0.2s; }
        .enfoque-item:nth-child(3) { animation-delay: 0.3s; }
        .enfoque-item:nth-child(4) { animation-delay: 0.4s; }

        @keyframes fadeInUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    }

    /* Accesibilidad */
    @media (prefers-reduced-motion: reduce) {
        .intro-column,
        .enfoque-item,
        .process-image {
            opacity: 1;
            transform: none;
            animation: none;
        }

        .enfoque-item:hover,
        .process-image:hover {
            transform: none;
        }
    }
